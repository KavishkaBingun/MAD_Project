<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#D23F51B5"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="394dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/addservdesign"


        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/etservTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Service Title"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <!--  <Spinner
        android:id="@+id/etservcat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:entries="@array/categories"
        android:minHeight="48dp"
        android:spinnerMode="dropdown" /> -->

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Service Price"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etFreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Freelancer Name"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etFreCon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Contact Number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etFreEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:minHeight="48dp" />


    </LinearLayout>

    <Button
        android:id="@+id/btnUpdateData"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/updatebutton"
        android:backgroundTint="#FAF6F6"
        android:text="Update Data"
        app:rippleColor="#FFFFFF" />
</LinearLayout>
