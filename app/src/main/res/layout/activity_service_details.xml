<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#6F3F51B5"
    android:orientation="vertical"
    tools:context="com.example.easyworks.activities.ServiceDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="417dp"
        android:layout_height="150dp"
        android:layout_marginTop="542dp"
        android:layout_marginBottom="2dp"
        android:background="#FFFFFF"
        android:backgroundTint="#113B4DB3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/wave__9_" />

        <ImageButton
            android:id="@+id/homenotselbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="#02FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_home_24_notsel"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ratenotselbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="334dp"
            android:layout_marginTop="82dp"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_stars_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/profnotselbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="253dp"
            android:layout_marginTop="82dp"
            android:backgroundTint="#03FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_account_circle_24_notsel"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/notifynotselbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="173dp"
            android:layout_marginTop="82dp"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_notifications_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/servicenotselbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="265dp"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_support_agent_24_notsel"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="417dp"
        android:layout_height="600dp"
        android:layout_marginTop="1dp"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="900dp"

            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!--        <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="201dp"
                    android:layout_height="114dp"
                    android:layout_marginBottom="51dp"
                    android:contentDescription="TODO"
                    app:layout_constraintBottom_toBottomOf="@+id/imagebackprofile"
                    app:layout_constraintEnd_toEndOf="@+id/imagebackprofile"
                    app:layout_constraintStart_toStartOf="@+id/imagebackprofile"
                    app:layout_constraintTop_toBottomOf="@+id/imagebackprofile"
                    app:srcCompat="@drawable/profilepic" /> -->

                <TextView
                    android:id="@+id/tvrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="541dp"
                    android:text="Rate This Service"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <RelativeLayout
                    android:layout_width="409dp"
                    android:layout_height="800dp"
                    android:orientation="vertical"
                    android:padding="20dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="3dp">

                    <TextView
                        android:id="@+id/texuid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service ID :"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView


                        android:id="@+id/tvServicid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texuid"
                        android:background="@drawable/btn_background_1"
                        android:padding="20dp"
                        android:text=""
                        android:textColor="@color/black"

                        android:textColorHint="@color/black"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/textv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvServicid"
                        android:text="Service Title :"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/tvServiceTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textv1"
                        android:background="@drawable/btn_background_1"
                        android:padding="20dp"
                        android:text=""
                        android:textColor="@color/black"

                        android:textColorHint="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvServiceTitle"
                        android:text="Service Price :"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textv2"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/btn_background_1"
                        android:padding="20dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/textv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvprice"
                        android:text="Freelancer Name :"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textv3"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/btn_background_1"
                        android:padding="20dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/textv4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvname"
                        android:text="Contact Number:"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvcontact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textv4"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/btn_background_1"
                        android:padding="20dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/textv5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvcontact"
                        android:text="Email :"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textv5"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/btn_background_1"
                        android:padding="18dp"
                        android:text=""
                        android:textColor="@color/black"

                        android:textColorHint="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="600dp"
                        android:minHeight="48dp"
                        android:text="Update"
                        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="210dp"
                        android:layout_marginTop="600dp"
                        android:text="Delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/btnUpdate" />


                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>